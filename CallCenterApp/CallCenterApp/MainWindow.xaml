<Window x:Class="CallCenterApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CallCenterApp"
        mc:Ignorable="d"
        PreviewKeyDown="Window_PreviewKeyDown"
        Title="Call Center" Height="150" Width="215" MinHeight="150" MinWidth="215" ResizeMode="CanMinimize" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="textBoxLogin" HorizontalAlignment="Left" Height="23" Margin="61,22,0,0" TextWrapping="Wrap" Text="{Binding Mode=TwoWay, Path=User.Name}" VerticalAlignment="Top" Width="120" TabIndex="1"/>
        <Label x:Name="labelLogin" Content="Login:" HorizontalAlignment="Left" Margin="18,18,0,0" VerticalAlignment="Top"/>
        <Label x:Name="labelPassword" Content="Hasło:" HorizontalAlignment="Left" Margin="18,46,0,0" VerticalAlignment="Top"/>
        <Button x:Name="buttonLogin" Content="Zaloguj" HorizontalAlignment="Left" Margin="61,78,0,0" VerticalAlignment="Top" Width="120" Click="buttonLogin_Click" TabIndex="3"/>
        <PasswordBox x:Name="passwordBox" HorizontalAlignment="Left" Margin="61,50,0,0" VerticalAlignment="Top" Width="120" Height="22" TabIndex="2"/>

    </Grid>
</Window>
